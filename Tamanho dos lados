programa {
  funcao inicio() {
    inteiro lado1, lado2, lado3
    escreva("qual o tamanho do lado?")
    leia(lado1)
    escreva("qual o tamanho do lado?")
    leia(lado2)
    escreva ("qual o tamanho do lado?")
    leia(lado3)
    inteiro soma = lado1+ lado2
    se(soma>lado3) {escreva ("valido")
    }
    senao escreva ("invalido")
  }
}
